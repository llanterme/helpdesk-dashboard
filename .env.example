# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/helpdesk?schema=public"

# Next Auth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Application
NODE_ENV="development"
PORT=3000

# Microsoft Graph Email Integration
# Set up Azure AD App Registration: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# Required permissions: Mail.Read, Mail.ReadWrite, Mail.Send, User.Read, offline_access
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
# Optional: Specific tenant ID (leave empty for multi-tenant)
MICROSOFT_TENANT_ID=""

# WhatsApp Business API Integration
# Get these from Meta Business Manager: https://business.facebook.com/
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_BUSINESS_ACCOUNT_ID=""
WHATSAPP_VERIFY_TOKEN="esg-whatsapp-verify-2024"

# Webhook API Keys
WEBHOOK_API_KEY="esg-webhook-key-2024"

# Zoho Integration
# Get credentials from: https://api-console.zoho.com/
ZOHO_CLIENT_ID=""
ZOHO_CLIENT_SECRET=""
ZOHO_REFRESH_TOKEN=""
ZOHO_ORGANIZATION_ID=""
# Region options: com, eu, in, com.au, jp, ca (defaults to com)
ZOHO_REGION="com"